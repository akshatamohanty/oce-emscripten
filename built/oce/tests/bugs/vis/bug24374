puts "============"
puts "CR24374"
puts "============"
puts ""
#######################################################################
#  Flipping affects highlight presentation of dimension
#######################################################################
box b 100 100 100
explode b e
vdisplay b
vdisplay b_9
vdimension dim1 -length -shapes b_9 -text 3d -plane zox
vselmode b 2 1
vselmode dim1 2 1
vfit
vmoveto 140 370

set x_coord 140
set y_coord 370
checkcolor $x_coord $y_coord 0 1 1

if { $stat != 1 } {
  puts "Error : Highlighting of dimension with flipping in local context failed."
}

set only_screen 1